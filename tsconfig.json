{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2018",
    "module": "ESNext",
    "lib": ["dom", "ES2018", "ESNext"],
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./build",
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./@types"],
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    },
    "skipLibCheck": true,

    /* Strict Type-Checking Options */
    "strict": false
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules", "./public", "./.cache", "./@types"]
}
